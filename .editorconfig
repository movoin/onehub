root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.html,*.htm,*.css}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[{Makefile,*.sh}]
indent_style = tab

[{*.yml,*.json}]
indent_size = 2
insert_final_newline = false
